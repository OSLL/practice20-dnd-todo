<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="6"
    android:orientation="horizontal"
    android:background="@android:color/background_dark">

    <Button
        android:id="@+id/hood"
        android:layout_column="0"
        android:background="@drawable/helmet2"
        android:layout_marginTop="-45dp"
        android:layout_width="90dp"
        android:layout_height="90dp"/>

    <Button
        android:id="@+id/right_arm"
        android:layout_column="1"
        android:background="@drawable/empty"
        android:layout_width="90dp"
        android:layout_height="180dp"/>

    <Button
        android:id="@+id/magic_1"
        android:layout_column="2"
        android:background="@drawable/empty"
        android:layout_marginTop="-45dp"
        android:layout_width="90dp"
        android:layout_height="90dp"/>

    <Button
        android:id="@+id/heal_potion"
        android:layout_column="3"
        android:layout_marginTop="-30dp"
        android:layout_width="90dp"
        android:layout_height="120dp"/>

    <TextView
        android:id="@+id/heal_points"
        android:layout_width="180dp"
        android:layout_height="125dp"
        android:layout_column="4"
        android:layout_marginTop="-23dp"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="40dp"
        android:gravity="center"
        android:text="HP: "/>

    <Button
        android:id="@+id/exit_e"
        android:layout_column="5"
        android:layout_marginTop="-30dp"
        android:layout_width="180dp"
        android:layout_height="120dp"/>

    <Button
        android:id="@+id/armor"
        android:layout_column="0"
        android:background="@drawable/chest2"
        android:layout_marginTop="-135dp"
        android:layout_width="90dp"
        android:layout_height="90dp"/>

    <Button
        android:id="@+id/left_arm"
        android:layout_column="1"
        android:background="@drawable/empty"
        android:layout_width="90dp"
        android:layout_height="180dp"/>

    <Button
        android:id="@+id/magic_2"
        android:layout_column="2"
        android:background="@drawable/empty"
        android:layout_marginTop="-135dp"
        android:layout_width="90dp"
        android:layout_height="90dp"/>

    <Button
        android:id="@+id/magic_potion"
        android:layout_column="3"
        android:layout_marginTop="-90dp"
        android:layout_width="90dp"
        android:layout_height="120dp"/>

    <TextView
        android:id="@+id/magic_points"
        android:layout_column="4"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginTop="-80dp"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="40dp"
        android:gravity="center"
        android:text="Mana:"/>

    <Button
        android:id="@+id/save"
        android:layout_column="5"
        android:layout_marginTop="-90dp"
        android:layout_width="180dp"
        android:layout_height="120dp"/>

    <Button
        android:id="@+id/pants"
        android:layout_column="0"
        android:background="@drawable/uplegs2"
        android:layout_marginTop="-205dp"
        android:layout_width="90dp"
        android:layout_height="90dp"/>

    <Button
        android:id="@+id/magic_3"
        android:layout_column="2"
        android:background="@drawable/empty"
        android:layout_marginTop="-205dp"
        android:layout_width="90dp"
        android:layout_height="90dp"/>

    <TextView
        android:id="@+id/experience_points"
        android:layout_column="4"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginTop="-120dp"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="40dp"
        android:gravity="center"
        android:text="EXP:"/>

    <Button
        android:id="@+id/backpack"
        android:layout_column="5"
        android:layout_marginTop="-130dp"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:background="@drawable/backpack"/>

    <Button
        android:id="@+id/experience_potion"
        android:layout_column="3"
        android:layout_marginTop="-130dp"
        android:layout_width="90dp"
        android:layout_height="120dp"/>

    <Button
        android:id="@+id/boots"
        android:layout_column="0"
        android:background="@drawable/legs2"
        android:layout_marginTop="-90dp"
        android:layout_width="90dp"
        android:layout_height="90dp"/>

    <Button
        android:id="@+id/magic_4"
        android:layout_column="2"
        android:background="@drawable/empty"
        android:layout_marginTop="-90dp"
        android:layout_width="90dp"
        android:layout_height="90dp"/>

</GridLayout>